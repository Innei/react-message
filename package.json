{
  "name": "react-message-popup",
  "version": "0.1.1",
  "description": "A simple message popup for React",
  "author": "Innei",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.min.js",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "dist",
    "lib",
    "esm",
    "readme.md",
    "tsconfig.json"
  ],
  "engines": {
    "pnpm": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase",
      "pnpm i",
      "npm run package"
    ],
    "after": [
      "sh ./scripts/create-tags.sh",
      "npm publish --access=public"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "predeploy": "rm -rf example/dist",
    "prebuild": "rm -rf rm -rf lib && rm -rf esm",
    "build": "ttsc --build src/tsconfig.build.json && ttsc --build src/tsconfig.cjs.json",
    "package": "NODE_ENV=production npm run build && rollup -c",
    "postpackage": "dts-bundle-generator -o dist/index.d.ts src/index.ts --project tsconfig.json  --no-check",
    "prepackage": "rm -rf build",
    "dev": "vite",
    "build:vite": "vite build",
    "preview": "vite preview --port 2323",
    "deploy": "vite build && gh-pages -d example/dist",
    "test": "jest --env=jsdom --colors --coverage test",
    "test:watch": "jest --env=jsdom --colors --coverage test --watch"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@innei-util/eslint-config-react-ts": "0.1.2",
    "@innei-util/eslint-config-ts": "0.3.4",
    "@innei-util/prettier": "0.1.4",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/jest": "27.4.0",
    "@types/lodash-es": "4.17.5",
    "@types/node": "16.11.14",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@zerollup/ts-transform-paths": "1.7.18",
    "dts-bundle-generator": "6.4.0",
    "gh-pages": "3.2.3",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "postcss": "8.4.5",
    "postcss-preset-env": "7.2.3",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "27.1.2",
    "tslib": "2.3.1",
    "ttypescript": "1.5.13",
    "typescript": "4.4.4",
    "vite": "2.7.11",
    "vite-tsconfig-paths": "3.3.17"
  }
}